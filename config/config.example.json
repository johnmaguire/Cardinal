{
    "nickname": "Cardinal",
    "password": "NICKSERV PASSWORD",
    "username": "cardinal",
    "realname": "Another IRC bot",
    "network": "irc.darkscience.net",
    "server_password": "SERVER PASSWORD (IF NECESSARY)",
    "port": 6697,
    "ssl": true,
    "storage": "storage/",
    "channels": [
        "#bots"
    ],

    "plugins": [
        "admin",
        "github",
        "google",
        "help",
        "join_on_invite",
        "lastfm",
        "ping",
        "remind",
        "sed",
        "seen",
        "timezone",
        "urbandict",
        "urls",
        "weather",
        "wikipedia",
        "youtube"
    ],

    "logging": {
        "version": 1,

        "formatters": {
            "simple": {
                "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
            }
        },

        "handlers": {
            "console": {
                "class": "logging.StreamHandler",
                "level": "DEBUG",
                "formatter": "simple",
                "stream": "ext://sys.stderr"
            },

            "file": {
                "class": "logging.handlers.RotatingFileHandler",
                "level": "INFO",
                "formatter": "simple",
                "filename": "storage/logs/cardinal.log",
                "maxBytes": 10485760,
                "backupCount": 10,
                "encoding": "utf8"
            },

            "null": {
                "class": "logging.NullHandler"
            }
        },

        "loggers": {
            "": {
                "level": "DEBUG",
                "handlers": ["console", "file"]
            },

            "cardinal.bot.irc": {
                "propagate": false,
                "level": "INFO",
                "handlers": ["null"]
            }
        }
    }
}
